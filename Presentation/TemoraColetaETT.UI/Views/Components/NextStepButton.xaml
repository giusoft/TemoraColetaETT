<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TemoraColetaETT.UI.Views.Components.NextStepButton"
    x:Name="this">

    <!-- O Grid permite posicionar o botão no canto inferior direito -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" /><!-- Linha que ocupa todo o espaço disponível -->
            <RowDefinition Height="Auto" /><!-- Linha para o botão -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" /> <!-- Coluna que ocupa todo o espaço disponível -->
            <ColumnDefinition Width="Auto" /> <!-- Coluna para o botão -->
        </Grid.ColumnDefinitions>

        <Button Grid.Row="1"
            Grid.Column="1"
            Text="{Binding Source={x:Reference this}, Path=ButtonText}"
            Command="{Binding Source={x:Reference this}, Path=ButtonCommand}"
            Margin="0,0,20,20"
            HorizontalOptions="End"
            VerticalOptions="End"
            Style="{StaticResource PrimaryButtonStyle}"/>
    </Grid>
</ContentView>
